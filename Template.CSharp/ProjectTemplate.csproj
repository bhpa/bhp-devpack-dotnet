<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Bhp.SmartContract.Framework" Version="1.2.0.0" />
  </ItemGroup>
  <UsingTask AssemblyFile="Bhp.ConvertTask.dll" TaskName="Bhp.ConvertTask" />
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Message Text="Start BhpContract converter, Source File: $(TargetPath)" Importance="high">
    </Message>
    <ConvertTask DataSource="$(TargetPath)" />
  </Target>
</Project>
